{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@facenet/typescript-config/base.json",
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": ".",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/**/*.ts", "eslint.config.js", "drizzle.config.ts"],
  "exclude": ["node_modules", "dist"]
}
